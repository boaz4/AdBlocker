{
  "name": "Ad Blocker",
  "version": "2.0",
  "description": "An ad blocker that will make browsing the web so much easier.",
  "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/"],
  "background": {
    "scripts": ["blocked_domains.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
