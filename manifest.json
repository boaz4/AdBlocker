{
    "manifest_version": 2,
    "name": " AdBlocker",
    "description": "Blocking web page ads.",
    "version": "0.0.1",
    "author": "<Boaz Alemseged>",
    "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/", "declarativeContent"],
    "background": {
        "scripts": ["background.js", "blacklist.js"]
    },
	"page_action": {
		"default_popup": "popup.html",
     		"default_icon": {
			"16": "icons/hello_extensions.png"}
    },

    	"icons": {
		"16": "icons/hello_extensions.png"
    }

}

